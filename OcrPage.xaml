<Page x:Class="PdfConverter.OcrPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OCR PDF">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="PDF'den Metin Çıkart" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>

        <Border Grid.Row="1" Margin="0,20" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" AllowDrop="True" Drop="Border_Drop">
            <Grid AllowDrop="True" Drop="Border_Drop">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="SelectedFileText" Text="PDF dosyası seçilmedi" FontSize="16" Foreground="#7F8C8D" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Dosya Seç" Click="SelectFile_Click" Width="120" Height="40" Margin="5" Style="{StaticResource ActionButton}"/>
            <Button Content="Metin Çıkart" Click="Ocr_Click" Width="120" Height="40" Margin="5" Style="{StaticResource ActionButton}"/>
        </StackPanel>
    </Grid>
</Page>
