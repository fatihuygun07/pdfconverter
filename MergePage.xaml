<Page x:Class="PdfConverter.MergePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PDF Birleştir">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="PDF Dosyalarını Birleştir" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>

        <Border Grid.Row="1" Margin="0,20" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" AllowDrop="True" Drop="Border_Drop">
            <Grid>
                <ListBox x:Name="FileListBox" Background="White" AllowDrop="True" Drop="Border_Drop"/>
                <TextBlock Text="Dosya eklemek için 'Dosya Seç' butonuna tıklayın" 
                          VerticalAlignment="Center" HorizontalAlignment="Center" 
                          Foreground="#95A5A6" FontSize="16" IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Items.Count, ElementName=FileListBox}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Dosya Seç" Click="SelectFiles_Click" Width="120" Height="40" Margin="5" Style="{StaticResource ActionButton}"/>
            <Button Content="Birleştir" Click="Merge_Click" Width="120" Height="40" Margin="5" Style="{StaticResource ActionButton}"/>
        </StackPanel>
    </Grid>
</Page>
